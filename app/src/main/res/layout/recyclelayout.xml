<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="8dp"
    android:paddingTop="0dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="@color/cardviewcolor"
        android:id="@+id/cardview"
        app:cardCornerRadius="10dp"
        android:elevation="9dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="30dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/recyclelayouttitle"
                android:maxLength="33"

                android:ellipsize="end"
                android:text=""
                android:paddingStart="10dp"
                android:paddingTop="8dp"
                android:textColor="@color/textviewcolor"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/recyclelayoutcategory"
                android:maxLength="32"

                android:ellipsize="end"
                android:layout_weight="1"
                android:text=""
                android:paddingStart="10dp"
                android:drawableStart="@drawable/baseline_create_new_folder_24"

                app:drawableTint="#3A444E"
                android:textColor="#3A444E"
                android:drawablePadding="10dp"
                android:textAlignment="viewStart"
                android:textSize="15sp"
                android:paddingTop="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/recycledate"
                android:maxLength="30"
                android:ellipsize="end"
                android:text=""
                android:textSize="12sp"
                android:paddingStart="10dp"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemdelete"
            android:src="@drawable/circle"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end|center"
            android:background="@color/cardviewcolor"/>

    </androidx.cardview.widget.CardView>


</RelativeLayout>